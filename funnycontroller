import cv2
#import "your led controller file name here" as cnt
import ardiardi as cnt
from cvzone.HandTrackingModule import HandDetector

detector1=HandDetector(detectionCon=0.1,maxHands=2)
#detector2=FaceMeshDetector(minDetectionCon=0.5)
#detector3=FaceDetector(minDetectionCon=0.5)
video=cv2.VideoCapture(0)

while True:
    ret,frame=video.read()
    frame=cv2.flip(frame,1)
    hands,img=detector1.findHands(frame)
    #img=detector2.findFaceMesh(frame)
    #img=detector3.findFaces(frame)
    if len(hands) == 1:
        lmList1 = hands[0]
        type = ""
        finger, type=detector1.onefingerUp(lmList1, type)
        print(finger)
        cnt.ledOneHand(finger, type)

    if len(hands) == 2:
        lmList1=hands[0]
        lmList2=hands[1]
        finger_right, finger_left=detector1.twofingersUp(lmList1, lmList2)

        print(finger_right, finger_left)
        cnt.ledTwoHands(finger_right, finger_left)
    cv2.imshow("frame",frame)
    k=cv2.waitKey(1)
    if k==ord("k"):
        break
video.release()
cv2.destroyAllWindows()
